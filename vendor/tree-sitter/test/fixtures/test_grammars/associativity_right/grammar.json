{
  "name": "associativity_right",

  "rules": {
    "expression": {
      "type": "CHOICE",
      "members": [
        {"type": "SYMBOL", "name": "math_operation"},
        {"type": "SYMBOL", "name": "identifier"}
      ]
    },

    "math_operation": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "SEQ",
        "members": [
          {"type": "SYMBOL", "name": "expression"},
          {"type": "STRING", "value": "+"},
          {"type": "SYMBOL", "name": "expression"}
        ]
      }
    },

    "identifier": {
      "type": "PATTERN",
      "value": "[a-zA-Z]+"
    }
  }
}